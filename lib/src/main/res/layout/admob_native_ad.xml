<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nativeAdViewLargeID"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@color/lib_white"
    android:visibility="visible">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="#1B8BDADA"
        android:clipChildren="true"
        android:clipToPadding="true">

        <com.google.android.gms.ads.nativead.MediaView
            android:id="@+id/media_view"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_120sdp"

            android:layout_below="@+id/ad_app_icon_card"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="#D9F3D9"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_ad"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="0dp"

            android:background="#2196F3"
            android:gravity="center"
            android:text="AD"
            android:textColor="@color/lib_black"
            android:textSize="@dimen/_8sdp"
            android:textStyle="bold"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btn_action" />

        <androidx.cardview.widget.CardView
            android:id="@+id/ad_app_icon_card"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"

            android:layout_below="@+id/tv_ad"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:adjustViewBounds="true"
            android:clipChildren="true"
            android:clipToPadding="true"

            app:cardCornerRadius="@dimen/_4sdp"
            app:layout_constraintBottom_toTopOf="@+id/tv_store"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:adjustViewBounds="true"
                android:background="@color/lib_white" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_headline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_below="@+id/tv_ad"
            android:layout_marginStart="@dimen/_14sdp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="OutDoor Explorer"
            android:textColor="@color/lib_black"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"

            app:layout_constraintEnd_toStartOf="@+id/media_view"
            app:layout_constraintStart_toEndOf="@+id/ad_app_icon_card"
            app:layout_constraintTop_toTopOf="@+id/ad_app_icon_card" />

        <TextView
            android:id="@+id/tv_body"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_below="@+id/tv_headline"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="2"
            android:text="Camp in the most comfortable outdoor gear around Camp in the most comfortable outdoor gear around Camp in the most comfortable outdoor gear around"
            android:textColor="@color/lib_black"
            android:textSize="@dimen/_8ssp"

            app:layout_constraintBottom_toTopOf="@+id/tv_advertiser"
            app:layout_constraintEnd_toStartOf="@+id/media_view"
            app:layout_constraintStart_toStartOf="@+id/ad_app_icon_card"
            app:layout_constraintTop_toBottomOf="@+id/tv_store" />

        <TextView
            android:id="@+id/tv_advertiser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_below="@id/media_view"
            android:layout_marginStart="10dp"
            android:gravity="bottom"
            android:text="Quick Explorer"
            android:textColor="@color/lib_black"
            android:textSize="@dimen/_10ssp"

            app:layout_constraintBottom_toTopOf="@+id/btn_action"
            app:layout_constraintEnd_toEndOf="@+id/tv_body"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_body" />

        <RatingBar
            android:id="@+id/rb_stars"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="14dp"

            android:layout_below="@+id/media_view"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="4"
            android:stepSize="0.5"
            android:visibility="visible"

            app:layout_constraintBottom_toBottomOf="@+id/ad_app_icon_card"
            app:layout_constraintStart_toStartOf="@+id/tv_headline"
            app:layout_constraintTop_toBottomOf="@+id/tv_headline" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@id/media_view"
            android:layout_centerHorizontal="true"
            android:visibility="visible"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_store"
            android:layout_width="0dp"

            android:layout_height="wrap_content"
            android:layout_below="@+id/media_view"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="16dp"
            android:text="Quick Explorer"
            android:textColor="@color/lib_black"
            android:textSize="@dimen/_9ssp"

            app:layout_constraintBottom_toTopOf="@+id/tv_body"
            app:layout_constraintEnd_toStartOf="@+id/media_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ad_app_icon_card" />

        <Button
            android:id="@+id/btn_action"
            android:layout_width="0dp"
            android:layout_height="@dimen/_25sdp"

            android:layout_below="@+id/tv_advertiser"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="#05FFFF"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="INSTALL"
            android:textColor="@color/lib_black"
            android:textSize="@dimen/_10ssp"

            app:layout_constraintEnd_toStartOf="@+id/tv_ad"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/media_view" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.gms.ads.nativead.NativeAdView>
